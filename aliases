# NGROK
ngrok() {
  cd ~/Downloads; (sleep 1; open $(curl -s http://localhost:4040/api/tunnels | egrep -o 'https:\/\/.*.ngrok.io' | xargs -I{} echo "https://chart.googleapis.com/chart?cht=qr&chl={}&chs=180x180&choe=UTF-8&chld=L%7C2")) & ./ngrok http $1
}

