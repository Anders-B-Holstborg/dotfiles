reset-feature-branch-1() {
  CURRENT_BRANCH=$(git branch | grep \* | cut -d ' ' -f2-)
  if [[ "$CURRENT_BRANCH" != "feature-branch-1" ]]; then
    echo 'Aborting script not on feature-branch-1';
  fi
  if [[ "$CURRENT_BRANCH" == "feature-branch-1" ]]; then
    echo 'Resetting feature-branch-1 to master and deleting all commits';
    git reset --hard origin/master
    git push origin HEAD --force
  fi
}


